@model CourseResultWebApp.Models.Course

@{
    ViewBag.Title = "Index";
}

@*<h2>Index</h2>*@

<script src="~/Scripts/custom.js"></script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>Course</h4>
            <hr />*@
        @Html.ValidationSummary(true)

        <div class="form-group" style="margin-top: 10px;">
            @Html.LabelFor(model => model.DepartmentId, new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="margin-top: 5px;">
                @Html.DropDownListFor(model => model.DepartmentId, Model.Department_List, "------ select ------", new { @id = "department_dropworn" });
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
